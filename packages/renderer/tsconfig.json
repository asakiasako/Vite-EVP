{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types" : ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": [
    "./src/**/*.vue",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "../preload/preload.d.ts",
    "../../node_modules/ant-design-vue/typings/global.d.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}
